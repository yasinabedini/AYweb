@using AIPFramework.Queries
@using AYweb.Application.Models.Blog.Queries.Common
@using AYweb.Application.Models.Blog.Queries.GetBlogs
@model PagedData<BlogResult>

@section Styles {
    <title>آی وب - اخبار روز برنامه نویسی</title>

    <meta name="description" content="از بروزترین اخبارهای حوزه ی تکنولوژی و برنامه نویسی با خبر شو.با آی وب هر روز از جدید ترین اخبار روز فارسی و انگلیسی مطلع شو و نظرات بقیه رو راجع به اون بخون " />

    <meta name=googlebot content=index,follow>

    <meta property="og:title" content="آی وب - اخبار روز تکنولوژی و برنامه نویسی" />
    <meta property="og:image" content="/img/fav.png" />
    <meta property="og:description" content="با آی وب از اخبار روز دنیای تکنولوژی و برنامه نویسی با خبر شو." />
    <meta property="og:url" content="https://ayweb.work/blog" />
}


<!-- Start Page Title Area -->
<div class="page-title-area page-title-bg2">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>وبلاگ</h2>

                    <ul>
                        <li><a href="/">آی وب</a></li>
                        <li>وبلاگ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <partial name="_Shapes" />
</div>
<!-- End Page Title Area -->
<!-- Start Blog Area -->
<section class="blog-area pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="row">

                    @foreach (var news in Model.QueryResult)
                    {
                        <partial name="_BlogView" model="news" />
                    }


                    @if (Model.QueryResult.Count > 0)
                    {
                        if (Model.PageSize < Model.TotalCount)
                        {
                            <div class="col-lg-12 col-md-12">
                                <partial name="_pagging" model="@Model.calculatePageCount()" />
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-secondary text-center">چیزی یافت نشد!</p>
                    }
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <partial name="_Widget" />
            </div>
        </div>
    </div>
</section>
<!-- End Blog Area -->
