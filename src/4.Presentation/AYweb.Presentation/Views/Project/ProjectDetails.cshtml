@using AYweb.Application.Models.Project.Queries.Common
@model ProjectResult

<!-- Start Page Title Area -->
<div class="page-title-area page-title-bg1">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>پروژه جداگانه</h2>

                    <ul>
                        <li><a href="#">آی وب</a></li>
                        <li><a href="#">پروژه ها</a></li>
                        <li>@Model.Title</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <partial name="_Shapes" />
</div>
<!-- End Page Title Area -->
<!-- Start Project Details Area -->
<section class="project-details-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="project-details-image">
                    <img src="/img/projects-image/@Model.FirstImage" alt="projects">                    
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="project-details-image">
                    <img src="/img/projects-image/@Model.SecondImage" alt="projects">                    
                </div>
            </div>
           

            <div class="col-lg-12 col-md-12">
                <div class="projects-details-desc">
                    <h3>تجزیه و تحلیل</h3>

                    <div>
                        @Html.Raw(Model.Description)
                    </div>

                    <div class="project-details-info">
                        <div class="single-info-box">
                            <h4>مشتری</h4>
                            <span>@Model.CustomerName</span>
                        </div>

                        <div class="single-info-box">
                            <h4>دسته</h4>
                            <span>@Model.RelatedService</span>
                        </div>

                        <div class="single-info-box">
                            <h4>تاريخ</h4>
                            <span>@Model.ShamsiDateString</span>
                        </div>

                        <div class="single-info-box">
                            <h4>اشتراک گذاری</h4>
                            <ul class="social">
                                <li><a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#" target="_blank"><i class="fab fa-instagram"></i></a></li>
                                <li><a href="#" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                            </ul>
                        </div>

                        <div class="single-info-box">
                            <a href="@Model.Link" class="default-btn">پیشنمایش<span></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Project Details Area -->