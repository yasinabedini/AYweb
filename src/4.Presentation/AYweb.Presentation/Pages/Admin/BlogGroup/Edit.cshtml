@page "{id}"

@model AYweb.Presentation.Pages.Admin.BlogGroup.EditModel

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Edit blog group</h6>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BlogGroup.Id" />
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">group title</label>
            <input type="text" class="form-control" asp-for="BlogGroup.Title" id="exampleInputEmail1"
                   aria-describedby="emailHelp">
        </div>        
        <hr />
        <button type="submit" class="btn btn-success m-5">Edit Blog group</button>
    </form>
</div>