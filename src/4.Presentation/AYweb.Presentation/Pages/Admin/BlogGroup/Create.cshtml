@page
@using AYweb.Application.Models.Permission.Queries.Common

@model AYweb.Presentation.Pages.Admin.BlogGroup.CreateModel


<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Register Blog Group</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Role title</label>
            <input type="text" class="form-control" asp-for="BlogGroup.Title" id="exampleInputEmail1"
                   aria-describedby="emailHelp">
        </div>       
        <button type="submit" class="btn btn-success m-5">Register Blog Group</button>
    </form>
</div>
